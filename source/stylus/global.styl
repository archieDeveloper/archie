color-base = #0ccc7a
color-dark-gray = #8899a0
color-gray = #e7e7e7
color-light-gray = #f2f2f2
color-dark-blue = #004055
color-blue = #008ccd
color-dark-red = #b53023

font-istok = "IstokWebRegular"
font-istok-bold = "IstokWebBold"
font-istok-italic = "IstokWebItalic"
font-istok-bold-italic = "IstokWebBoldItalic"

font-icons = "FontAwesome"

transition(time)
  -webkit-transition all time ease-out
  -moz-transition all time ease-out
  -o-transition all time ease-out
  transition all time ease-out

user-select-none()
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

body
  margin 0
  padding 0
  font-family font-istok

a
  -webkit-transition all .1s ease-out
  -moz-transition all .1s ease-out
  -o-transition all .1s ease-out
  transition all .1s ease-out

