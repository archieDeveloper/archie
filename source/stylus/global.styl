font-merriweather-bold-italic = "MerriweatherBoldItalic"
font-merriweather-light-italic = "MerriweatherLightItalic"

font-icons = "FontAwesome"

transition(time)
  -webkit-transition all time ease-out
  -moz-transition all time ease-out
  -o-transition all time ease-out
  transition all time ease-out

user-select-none()
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

body
  margin 0
  padding 0
  font-family font-istok

a
  transition(.1s)

